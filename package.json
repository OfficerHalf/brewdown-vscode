{
  "name": "brewdown-vscode",
  "version": "0.0.1",
  "description": "Adds the brewdown markdown-it plugin to VS Code. Brewdown is a flavor of markdown and stylesheet specifically for D&D 5th edition homebrew.",
  "main": "./extension.js",
  "scripts": {
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "repository": {
    "url": "https://github.com/OfficerHalf/brewdown-vscode.git"
  },
  "keywords": [
    "markdown",
    "dnd",
    "homebrew",
    "brewdown"
  ],
  "author": "Nathan Smith",
  "publisher": "officerhalf",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/OfficerHalf/brewdown-vscode/issues"
  },
  "engines": {
    "vscode": "^1.0.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "contributes": {
    "markdown.markdownItPlugins": true,
    "markdown.previewStyles": [
      "./brewdown-assets/styles.css"
    ],
    "snippets": [
      {
        "language": "markdown",
        "path": "./snippets.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Brewdown configuration",
      "properties": {
        "brewdown.twoCol": {
          "type": "boolean",
          "default": true,
          "description": "Render with two columns."
        },
        "brewdown.pageSize": {
          "type": "string",
          "default": "letter",
          "enum": [
            "a2",
            "a3",
            "a4",
            "a5",
            "a6",
            "b3",
            "b4",
            "b5",
            "letter",
            "legal"
          ],
          "description": "Size of the preview page."
        }
      }
    },
    "commands": [
      {
        "command": "brewdown.render",
        "title": "Render as HTML",
        "category": "brewdown"
      }
    ]
  },
  "devDependencies": {
    "vscode": "^1.0.0"
  },
  "dependencies": {
    "brewdown": "^1.2.0",
    "markdown-it": "^8.4.1",
    "ncp": "^2.0.0"
  }
}
